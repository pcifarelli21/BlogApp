
<%- include ("partials/header") %>

<div class="ui main text container">
    <div class="ui huge header">
        RESTful Blog App
    </div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= blog.image %>" alt="pics">
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                        <div class="meta">
                            <span><%= blog.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <!-- TODO:.substring (0.100) shows only the 1st 100 characters of the post -->
                            <!-- TODO: by changing the = to a - in the below paragraph it renders the code instead of reading so html tags will work -->
                            <p><%- blog.body.substring(0, 100) %>...</p> 
                        </div>
                        <div class="extra">
                            <a class="ui floated basic blue button" href="/blogs/<%= blog._id %>">
                                Read More
                                <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>



<%- include ("partials/footer") %>
